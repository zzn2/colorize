<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="Colorize your CompoundDrawable icons!"
        android:drawableLeft="@drawable/ic_info"
        android:textColor="@color/blue"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="Icons shows up in textColor"
        android:drawableLeft="@drawable/ic_info"
        android:textColor="@color/green"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="Any View who contains CompoundDrawable"
        android:drawableLeft="@drawable/ic_info"
        android:textColor="@color/pink"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/ic_info"
        android:text="@string/button"
        android:textColor="@color/blue"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="Colors change along with state of View"
        android:drawableLeft="@drawable/ic_info"
        android:textColor="@color/gray"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/ic_info"
        android:text="@string/button_disabled"
        android:textColor="@color/selector_pink"
        android:enabled="false"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="Supports left, top, right, bottom."
        android:drawableLeft="@drawable/ic_info"
        android:drawableRight="@drawable/ic_info"
        android:drawableTop="@drawable/ic_info"
        android:drawableBottom="@drawable/ic_info"
        android:textColor="@color/green"
        />

</LinearLayout>
